<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:background="@color/black">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:gravity="center"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/item_property_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                tools:text="Apartamento"
                tools:textColor="@color/white" />

            <TextView
                android:id="@+id/item_property_address_neighborhood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_property_type"
                android:layout_centerHorizontal="true"
                tools:text="Bairro"
                tools:textColor="@color/white" />

            <TextView
                android:id="@+id/item_property_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_property_address_neighborhood"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="R$ 0,00"
                tools:textColor="@color/white" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/item_property_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            tools:background="@color/purple" />
    </LinearLayout>

</android.support.v7.widget.CardView>
